<div class="container p-4 mt-5 pt-5 mx-auto" style="max-width: 400px">
  <% if alert %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
  <% end %>

  <h3 class="text-center mb-4">Masuk Sistem Bimbingan</h3>

  <%= bootstrap_form_with(model: resource, as: resource_name, url: session_path(resource_name), html: {"data-turbo": false, class: "grid", style: "--bs-columns: 1; --bs-gap: 0"}) do |f| %>
    <%= f.text_field :username, autofocus: true, autocomplete: "email" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
    <%= f.check_box :remember_me %>
    <%= f.primary "Masuk", extra_class: "mt-3" %>
  <% end %>
  <%= render "users/shared/links" %>
</div>
