<%= render(SmallContainerComponent.new) do %>
  <%= render(FlashComponent.new) %>

  <% if current_user.essay_proposal.nil? %>
    <%= render "unregistered" %>
  <% elsif current_user.essay_proposal.status.to_sym == :approved %>
    <%= render "approved" %>
  <% else %>
    <%= render "registered" %>
  <% end %>
<% end %>
