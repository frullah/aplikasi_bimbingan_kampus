<%= turbo_frame_tag dom_id(@kkp_guidance) do %>
  <%= render(SmallContainerComponent.new) do %>
    <%= render(FlashComponent.new) %>
    <%= link_to "< Kembali", kkp_guidances_path, "data-turbo-frame": "_top", class: "btn btn-link fw-medium" %>

    <h2 class="text-center">Cek Bimbingan KKP</h2>

    <%= render "fields" %>

    <div class="grid" style="--bs-columns: 1; --bs-gap: 1rem">
      <%= link_to "Tolak",
        kkp_guidance_rejection_path(@kkp_guidance),
        "data-disable-with": "Menerima...",
        "data-turbo-frame": "_top",
        class: "btn btn-danger" %>
      <%= link_to "Setujui",
        kkp_guidance_approval_path(@kkp_guidance),
        "data-disable-with": "Menerima...",
        "data-turbo-frame": "_top",
        class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>